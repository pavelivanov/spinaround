@import "../../node_modules/nib/lib/nib"
@import "mixins"


.content
  width: 900px
  margin 0 auto
  padding 50px 0 100px

.items
  width: 100%
  font-size: 0

.item
  width: 33.33%
  position: relative
  display-inline-block()

.item-in
  background-color: #ecf3fb
  margin 10px
  padding-bottom: calc(100% - 20px)
  position: relative
  user-select none
  border-radius 4px
  &:before
  &:after
    content ''
    display: none
    background-color: red
    position absolute
  &:before
    width: 100%
    height: 1px
    top 50%
  &:after
    width: 1px
    height: 100%
    left 50%

.spin
  position absolute !important
  top 50%
  left 50%
  z-index: 100

.sod-sticky-balls
  width: auto !important
  height: auto !important
  border-radius 4px
