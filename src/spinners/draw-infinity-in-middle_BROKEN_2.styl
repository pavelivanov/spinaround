$size                 = 50px
$offset               = 36px
$animate-speed        = 3s
$animation-function   = linear


@keyframes draw-infinity-in-middle-static_BROKEN
  0%
    transform translate(80px, 0) rotate(180deg)
    box-shadow $color -160px 0
  25%
    transform translate(80px, 0) rotate(0deg)
    box-shadow $color -160px 0 0 10px
  75%
    transform translate(80px, 0) rotate(180deg)
    box-shadow $color -160px 0 0 10px
  100%
    transform translate(80px, 0)
    box-shadow $color -160px 0

@keyframes draw-infinity-in-middle-movable_BROKEN
  0%
    transform-origin: 64px 50%
    transform rotate(0deg)
  50%
    transform-origin: 64px 50%
    transform rotate(-360deg)
  50.02%
    transform-origin: -16px 50%
  100%
    transform-origin: -16px 50%
    transform rotate(0deg)


.draw-infinity-in-middle_BROKEN_2
  filter url('#goo')
  -webkit-filter url('#goo')
  absolute top 0 left 0 right 0 bottom 0
  margin auto

  &:before
  &:after
    content ''
    size $size
    display block
    background $color
    margin ($size / -2) 0 0 ($size / -2)
    absolute top 50% left 50%
    border-radius 100%

  &:before
    transform-origin: -56px 50%
    animation draw-infinity-in-middle-static_BROKEN $animation-function $animate-speed infinite

  &:after
    animation draw-infinity-in-middle-movable_BROKEN $animation-function $animate-speed infinite
