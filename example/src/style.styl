@import "nib"
@import "_mixins"
@import "_fonts"


body
  font 18px/26px 'Noto Sans', sans-serif


.content
  max-width: 1200px
  margin 0 auto
  padding 50px 5px 100px

.spinners
  font-size: 0

.spinner
  width: 25%
  position: relative
  display-inline-block()

.spinner-in
  background repeating-linear-gradient(
      to right,
      #052c33,
      #052c33 1px,
      transparent 1px,
      transparent 12.5%
  ), repeating-linear-gradient(
      to bottom,
      #052c33,
      #052c33 1px,
      transparent 1px,
      transparent 12.5%
  )
  background-color: #07303a //#ecf3fb
  margin 20px
  padding-bottom: calc(100% - 20px)
  position: relative
  user-select none
  border-radius 6px
  &:before
  &:after
    content ''
    display: block
    background-color: #05272d
    position absolute
  &:before
    width: 100%
    height: 1px
    top 50%
  &:after
    width: 1px
    height: 100%
    left 50%

.spinner-title
  line-height: 20px
  cursor: default
  absolute top 5px right 12px
  opacity: 0.1
  font-size: 0
  color #fff

.spinner-title-pre
  vertical-align: top
  margin 5px 8px 0 0
  font-weight: 600
  font-size: 18px
  display-inline-block()

.spinner-num
  vertical-align: top
  line-height: 40px
  font-weight: 600
  font-size: 40px

.core
  position absolute !important
  top 50%
  left 50%
  z-index: 100

.sod-sticky-balls
  width: auto !important
  height: auto !important
  border-radius 4px


@media (max-width: 500px)
  .spinner
    width: 100%
