$size                        = 40px
$animation-speed             = 1.2s
$animation-function          = linear


@keyframes spinner-11-container
  0%
    transform rotateY(0deg)
  50%
    transform rotateY(180deg)
  100%
    transform rotateY(0deg)
  
@keyframes spinner-11-after
  0%
    transform rotate(0deg) translate(0, 0)
  25%
    transform rotate(0deg) translate(48px, 32px)
  25.001%
    transform rotate(90deg) translate(80px, 0px)
  75%
    transform rotate(-90deg) translate(80px, 0px)
  75.001%
    transform rotate(0deg) translate(48px, -32px)
  100%
    transform rotate(0deg) translate(0, 0)


.spinner-11
  size($size)
  position absolute
  top 50%
  left 50%
  margin ($size / -2) 0 0 ($size / -2)
  user-select none
  animation spinner-11-container ($animation-speed * 2) steps(1) infinite

  &:after
    content ''
    @include size($size)
    display block
    background-color $color
    position absolute
    top 0
    left 0
    border-radius 50%
    transform-origin 170% 50%
    animation spinner-11-after $animation-speed $animation-function infinite
